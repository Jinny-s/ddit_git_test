<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Orderdetail-Mapper">
	
	<select id="selectOrderdetailListByOno" resultType="orderdetail">
		select *
		from   orderdetail
		where  ono = #{ono}
	</select>
	
	<select id="selectPnameByOno" resultType="str">
		select pname
		from   orderdetail
		where  ono = #{ono}
		and    rownum = 1
	</select>
	
	<select id="selectPnameCountByOno" resultType="int">
		select count(pname)
		from   orderdetail
		where  ono = #{ono}
	</select>
	
</mapper>
